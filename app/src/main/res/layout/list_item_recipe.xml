<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_activated"
    android:id="@+id/recipe_list_view">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recipe_list_item_solvedCheckBox"
        android:gravity="center"
        android:focusable="false"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:padding="4dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recipe_list_item_titleTextView"
        android:layout_toLeftOf="@+id/recipe_list_item_solvedCheckBox"
        android:textStyle="bold"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Recipe title"
        android:fontFamily="sans-serif-thin"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recipe_list_item_dateTextView"
        android:layout_below="@+id/recipe_list_item_titleTextView"
        android:layout_toLeftOf="@+id/recipe_list_item_solvedCheckBox"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:text="Recipe date"
        android:fontFamily="sans-serif-condensed-medium"/>

</RelativeLayout>
